  <div class="container4">
        <h4 class="new_article">最新の記事</h4>        
          <% @articles.last(6).reverse_each do |article| %>
          <%= link_to("/article/#{article.id}",:style=>"text-decoration: none; ") do %>
          <h4 class="article-title-area">
          <div class="article-title">
           <%= article.title %>
           <% case article.genre
            when "business" %>
            <div class="genre1 business">実業家</div>
            <% when "athlete" %>
            <div class="genre1 athlete">アスリート</div>
            <% when "art" %>
            <div class="genre1 art">芸術</div>
            <% when "politics" %>
            <div class="genre1 politics">政治</div>
            <% when "society" %>
            <div class="genre1 society">社会</div>
            <% when "philosophy" %>
            <div class="genre1 philosophy">哲学</div>
            <% when "education" %>
            <div class="genre1 education">教育</div>
            <% end %>
          </div>
          <div class="video">
          <iframe width="150" height="100" src="<%= article.youtube %>" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen>
          </iframe>
          </div>
          <!-- <img class="article-title-img" src="< "/article_images/#{article.titleimg}" %>"> -->
          </h4>
          <% end %>
          <% end %>
          <div class="clear"></div>
  </div>
